@{
    ViewData["Title"] = "Tutoring Calculator";
}

<section class="calculator">
    <div class="calculator-header">
        <p class="eyebrow">Tutoring</p>
        <h1 class="display-6">Music Lesson Quote</h1>
        <p class="lead">
            Estimate a tutoring session focused on lessons, practice planning, or recording basics.
        </p>
    </div>

    <div class="card shadow-sm calculator-card">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label" for="hoursInput">Hours needed</label>
                    <input id="hoursInput" type="number" min="0" step="0.5" class="form-control" placeholder="e.g., 2.5" />
                    <div id="hoursError" class="text-danger small mt-1 d-none">Please enter a positive number.</div>
                </div>
                <div class="col-md-4">
                    <label class="form-label" for="rateInput">Hourly rate</label>
                    <input id="rateInput" type="text" class="form-control" value="$30" readonly />
                </div>
                <div class="col-md-4">
                    <label class="form-label" for="totalOutput">Total</label>
                    <input id="totalOutput" type="text" class="form-control" placeholder="$0.00" readonly />
                </div>
            </div>

            <div class="d-flex flex-wrap gap-2 mt-4">
                <button id="calcButton" class="btn btn-primary">Calculate Total</button>
                <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/tutoring.js" asp-append-version="true"></script>
}
